<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?attr/selectableItemBackgroundBorderless"
              android:clickable="true"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_comf"
            android:gravity="center_vertical"
            android:text="@string/string_type"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimen_text_size_small"/>

        <TextView
            android:id="@+id/tv_brf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:gravity="center_vertical"
            android:text="@string/string_brf"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dimen_text_size_small"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/gray"
        android:textSize="@dimen/dimen_text_size_tiny"
        tools:text="白天不太热也不太冷，风力不大，相信您在这样的天气条件下，应会感到比较清爽和舒适。"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/lightgray"/>

</LinearLayout>
